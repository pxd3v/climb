// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int         @id @default(autoincrement())
  email          String      @unique
  name           String
  state          String
  city           String
  birthDate      DateTime
  gender         Gender
  participations Candidate[]
  password       String
}

model Boulder {
  id         Int          @id @default(autoincrement())
  number     Int          @unique
  event      Event        @relation(fields: [eventId], references: [id])
  eventId    Int
  flashScore Int
  score      Int
  entry      Entry[]
  sector     String
  color      BoulderGrade @default(verde)
}

model Event {
  id         Int         @id @default(autoincrement())
  name       String      @unique
  candidates Candidate[]
  boulders   Boulder[]
  entries    Entry[]
}

model Entry {
  id          Int       @id @default(autoincrement())
  candidate   Candidate @relation(fields: [candidateId], references: [id])
  candidateId Int
  boulder     Boulder   @relation(fields: [boulderId], references: [id])
  boulderId   Int
  event       Event     @relation(fields: [eventId], references: [id])
  eventId     Int
  tries       Int       @default(0)
  sent        Boolean   @default(false)
}

model Candidate {
  id       Int      @id @default(autoincrement())
  event    Event    @relation(fields: [eventId], references: [id])
  eventId  Int
  user     User     @relation(fields: [userId], references: [id])
  userId   Int
  entries  Entry[]
  category Category

  @@unique([userId, eventId], name: "user_event_key")
}

enum Gender {
  Male
  Female
}

enum Category {
  pro
  amateur
  kids
}

enum BoulderGrade {
  roxo
  branco
  amarelo
  verde
  azul
  vermelho
  preto
}
