// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model User {
  id             Int         @id @default(autoincrement())
  email          String      @unique
  name           String
  state          String
  city           String
  birthDate      DateTime
  gender         Gender
  password       String
  isAdmin        Boolean     @default(false)
  participations Candidate[]
  Referee        Referee[]
}

model Boulder {
  id         Int          @id @default(autoincrement())
  number     Int          @unique
  event      Event        @relation(fields: [eventId], references: [id])
  eventId    Int
  flashScore Int
  score      Int
  entry      Entry[]
  sector     String
  color      BoulderGrade @default(verde)

  @@unique([number, eventId], name: "boulder_number_event_key")
}

model Event {
  id                  Int         @id @default(autoincrement())
  name                String      @unique
  createdAt           DateTime    @default(now())
  ended               Boolean     @default(false)
  candidates          Candidate[]
  boulders            Boulder[]
  entries             Entry[]
  Referee             Referee[]
  maxBouldersForScore Int         @default(6)
}

model Entry {
  id          Int       @id @default(autoincrement())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  candidate   Candidate @relation(fields: [candidateId], references: [id])
  candidateId Int
  referee     Referee   @relation(fields: [refereeId], references: [id])
  refereeId   Int
  boulder     Boulder   @relation(fields: [boulderId], references: [id])
  boulderId   Int
  event       Event     @relation(fields: [eventId], references: [id])
  eventId     Int
  tries       Int       @default(0)
  sent        Boolean   @default(false)

  @@unique([candidateId, boulderId, eventId], name: "candidate_boulder_event_key")
}

model Candidate {
  id       Int      @id @default(autoincrement())
  number   Int
  event    Event    @relation(fields: [eventId], references: [id])
  eventId  Int
  user     User     @relation(fields: [userId], references: [id])
  userId   Int
  entries  Entry[]
  category Category

  @@unique([number, eventId], name: "candidate_number_event_key")
  @@unique([userId, eventId], name: "user_event_key")
}

model Referee {
  id      Int     @id @default(autoincrement())
  event   Event   @relation(fields: [eventId], references: [id])
  eventId Int
  user    User    @relation(fields: [userId], references: [id])
  userId  Int
  Entry   Entry[]

  @@unique([eventId, userId], name: "event_refereer_key")
}

enum Gender {
  Male
  Female
}

enum Category {
  pro
  amateur
  kids
}

enum BoulderGrade {
  roxo
  branco
  amarelo
  verde
  azul
  vermelho
  preto
}
